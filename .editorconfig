# http://editorconfig.org

root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true

[Makefile]
end_of_line = lf

[*.c]
max_line_length = 72
rulers = 72

[*.h]
max_line_length = 72
rulers = 72
